<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="dual_arm_robot">

  <!-- Common properties -->
  <xacro:property name="effort" value="1"/>
  <xacro:property name="velocity" value="1.0"/>
  <xacro:property name="gripper_velocity" value="0.1"/>
  <xacro:property name="gripper_limit" value="0.03"/>
  <xacro:property name="arm_offset" value="0.6"/> <!-- Y-axis offset from base center -->

  <!-- Long base link along Y -->
  <link name="base_link">
    <visual><geometry><box size="0.2 1.5 0.05"/></geometry></visual>
    <collision><geometry><box size="0.2 1.0 0.05"/></geometry></collision>
  </link>

  <!-- Macro for an arm -->
  <xacro:macro name="one_arm" params="prefix base_offset_y">
    <xacro:macro name="arm_segment" params="joint_name parent_link child_link origin_xyz link_length link_size">
      <joint name="${prefix}${joint_name}" type="revolute">
        <origin xyz="${origin_xyz}"/>
        <axis xyz="0 0 1"/>
        <parent link="${parent_link}"/>
        <child link="${prefix}${child_link}"/>
        <limit effort="${effort}" velocity="${velocity}" lower="-3.14" upper="3.14"/>
      </joint>
      <link name="${prefix}${child_link}">
        <visual><origin xyz="${link_length} 0 0"/><geometry><box size="${link_size}"/></geometry></visual>
        <collision><origin xyz="${link_length} 0 0"/><geometry><box size="${link_size}"/></geometry></collision>
      </link>
    </xacro:macro>

    <!-- First joint connects arm to base -->
    <xacro:arm_segment joint_name="joint1" parent_link="base_link" child_link="link1" origin_xyz="0 ${base_offset_y} 0.05" link_length="0.15" link_size="0.3 0.05 0.05"/>
    <xacro:arm_segment joint_name="joint2" parent_link="${prefix}link1" child_link="link2" origin_xyz="0.3 0 0" link_length="0.2" link_size="0.4 0.05 0.05"/>
    <xacro:arm_segment joint_name="joint3" parent_link="${prefix}link2" child_link="link3" origin_xyz="0.4 0 0" link_length="0.5" link_size="1.0 0.1 0.05"/>
    <xacro:arm_segment joint_name="joint4" parent_link="${prefix}link3" child_link="link4" origin_xyz="1.0 0 0" link_length="0.1" link_size="0.2 0.05 0.05"/>
    <xacro:arm_segment joint_name="joint5" parent_link="${prefix}link4" child_link="link5" origin_xyz="0.2 0 0" link_length="0.2" link_size="0.4 0.05 0.05"/>

    <joint name="${prefix}joint6" type="revolute">
      <origin xyz="0.4 0 0"/><axis xyz="1 0 0"/>
      <parent link="${prefix}link5"/><child link="${prefix}link6"/>
      <limit effort="${effort}" velocity="${velocity}" lower="-3.14" upper="3.14"/>
    </joint>
    <link name="${prefix}link6">
      <visual><origin xyz="0.1 0 0"/><geometry><box size="0.2 0.05 0.05"/></geometry></visual>
      <collision><origin xyz="0.1 0 0"/><geometry><box size="0.2 0.05 0.05"/></geometry></collision>
    </link>

    <!-- Palm and gripper -->
    <joint name="${prefix}gripper_base_joint" type="fixed">
      <origin xyz="0.2 0 0"/><parent link="${prefix}link6"/><child link="${prefix}palm_link"/>
    </joint>
    <link name="${prefix}palm_link">
      <visual><geometry><box size="0.1 0.1 0.02"/></geometry></visual>
      <collision><geometry><box size="0.1 0.1 0.02"/></geometry></collision>
    </link>

    <!-- Gripper fingers -->
    <joint name="${prefix}left_finger_joint" type="prismatic">
      <origin xyz="0.15 0.05 0"/><axis xyz="0 -1 0"/>
      <parent link="${prefix}palm_link"/><child link="${prefix}left_finger"/>
      <limit lower="0" upper="${gripper_limit}" effort="${effort}" velocity="${gripper_velocity}"/>
    </joint>
    <link name="${prefix}left_finger">
      <visual><geometry><box size="0.3 0.04 0.02"/></geometry></visual>
      <collision><geometry><box size="0.3 0.04 0.02"/></geometry></collision>
    </link>

    <joint name="${prefix}right_finger_joint" type="prismatic">
      <origin xyz="0.15 -0.05 0"/><axis xyz="0 1 0"/>
      <parent link="${prefix}palm_link"/><child link="${prefix}right_finger"/>
      <limit lower="0" upper="${gripper_limit}" effort="${effort}" velocity="${gripper_velocity}"/>
    </joint>
    <link name="${prefix}right_finger">
      <visual><geometry><box size="0.3 0.04 0.02"/></geometry></visual>
      <collision><geometry><box size="0.3 0.04 0.02"/></geometry></collision>
    </link>
  </xacro:macro>

  <!-- Instantiate left and right arms -->
  <xacro:one_arm prefix="left_" base_offset_y="${arm_offset}"/>
  <xacro:one_arm prefix="right_" base_offset_y="-${arm_offset}"/>

    <!-- ros2_control for fake hardware -->
  <ros2_control name="FakeDualArmSystem" type="system">
    <hardware>
      <plugin>fake_components/GenericSystem</plugin>
    </hardware>

    <xacro:macro name="ros2_joint" params="name">
      <joint name="${name}">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
    </xacro:macro>

    <!-- Left arm joints -->
    <xacro:ros2_joint name="left_joint1"/>
    <xacro:ros2_joint name="left_joint2"/>
    <xacro:ros2_joint name="left_joint3"/>
    <xacro:ros2_joint name="left_joint4"/>
    <xacro:ros2_joint name="left_joint5"/>
    <xacro:ros2_joint name="left_joint6"/>
    <xacro:ros2_joint name="left_left_finger_joint"/>
    <xacro:ros2_joint name="left_right_finger_joint"/>

    <!-- Right arm joints -->
    <xacro:ros2_joint name="right_joint1"/>
    <xacro:ros2_joint name="right_joint2"/>
    <xacro:ros2_joint name="right_joint3"/>
    <xacro:ros2_joint name="right_joint4"/>
    <xacro:ros2_joint name="right_joint5"/>
    <xacro:ros2_joint name="right_joint6"/>
    <xacro:ros2_joint name="right_left_finger_joint"/>
    <xacro:ros2_joint name="right_right_finger_joint"/>
  </ros2_control>
</robot>