<?xml version="1.0"?>
<robot name="2dof">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.2 0.2 0.05"/></geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.2 0.2 0.05"/></geometry>
    </collision>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="link1"/>
    <limit effort="1" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <link name="link1">
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
      <material name="blue"><color rgba="0 0 1 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
    </collision>
  </link>

  <!-- Joint 2 -->
  <joint name="joint2" type="revolute">
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="link1"/>
    <child link="link2"/>
    <limit effort="1" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
      <material name="green"><color rgba="0 1 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
    </collision>
  </link>

  <link name="ee_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.05"/></geometry>
      <material name="red"><color rgba="1 0 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.05"/></geometry>
    </collision>
  </link>

  <joint name="ee_fixed" type="fixed">
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <parent link="link2"/>
    <child link="ee_link"/>
  </joint>

</robot>
