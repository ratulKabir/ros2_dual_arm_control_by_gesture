    <collision><origin xyz="0.5 0 0"/><geometry><box size="1.0 0.05 0.05"/></geometry></collision>
  </link>

  <!-- Palm and Gripper -->
  <joint name="gripper_base_joint" type="fixed">
    <origin xyz="1.0 0 0"/><parent link="link6"/><child link="palm_link"/>
  </joint>
  <link name="palm_link">
    <visual><geometry><box size="0.1 0.1 0.02"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.02"/></geometry></collision>
  </link>

  <joint name="left_finger_joint" type="prismatic">
    <origin xyz="0.05 0.02 0"/><axis xyz="0 1 0"/>
    <parent link="palm_link"/><child link="left_finger"/>
    <limit lower="0" upper="0.04" effort="1" velocity="0.1"/>
  </joint>
  <link name="left_finger">
    <visual><geometry><box size="0.08 0.04 0.02"/></geometry></visual>
    <collision><geometry><box size="0.08 0.04 0.02"/></geometry></collision>
  </link>

  <joint name="right_finger_joint" type="prismatic">
    <origin xyz="0.05 -0.02 0"/><axis xyz="0 -1 0"/>
    <parent link="palm_link"/><child link="right_finger"/>
    <limit lower="0" upper="0.04" effort="1" velocity="0.1"/>
  </joint>
  <link name="right_finger">
    <visual><geometry><box size="0.08 0.04 0.02"/></geometry></visual>
    <collision><geometry><box size="0.08 0.04 0.02"/></geometry></collision>
