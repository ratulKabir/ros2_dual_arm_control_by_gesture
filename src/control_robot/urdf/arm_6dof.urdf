  </link>

  <joint name="joint4" type="revolute">
    <origin xyz="1.0 0 0"/><axis xyz="0 1 0"/>
    <parent link="link3"/><child link="link4"/>
    <limit effort="1" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>
  <link name="link4">
    <visual><origin xyz="0.1 0 0"/><geometry><box size="0.2 0.05 0.05"/></geometry></visual>
    <collision><origin xyz="0.1 0 0"/><geometry><box size="0.2 0.05 0.05"/></geometry></collision>
  </link>

  <joint name="joint5" type="revolute">
    <origin xyz="0.2 0 0"/><axis xyz="1 0 0"/>
    <parent link="link4"/><child link="link5"/>
