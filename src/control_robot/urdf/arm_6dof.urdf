<?xml version="1.0"?>
<robot name="arm_6dof">

  <link name="base_link">
    <visual><geometry><box size="0.2 0.2 0.05"/></geometry></visual>
    <collision><geometry><box size="0.2 0.2 0.05"/></geometry></collision>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <origin xyz="0 0 0.05"/><axis xyz="0 0 1"/>
    <parent link="base_link"/><child link="link1"/>
    <limit effort="1" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>
  <link name="link1">
    <visual><origin xyz="0.15 0 0"/><geometry><box size="0.3 0.05 0.05"/></geometry></visual>
    <collision><origin xyz="0.15 0 0"/><geometry><box size="0.3 0.05 0.05"/></geometry></collision>
  </link>

  <joint name="joint2" type="revolute">
    <origin xyz="0.3 0 0"/><axis xyz="0 1 0"/>
    <parent link="link1"/><child link="link2"/>
    <limit effort="1" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>
  <link name="link2">
    <visual><origin xyz="0.2 0 0"/><geometry><box size="0.4 0.05 0.05"/></geometry></visual>
    <collision><origin xyz="0.2 0 0"/><geometry><box size="0.4 0.05 0.05"/></geometry></collision>
  </link>

  <joint name="joint3" type="revolute">
    <origin xyz="0.4 0 0"/><axis xyz="0 0 1"/>
    <parent link="link2"/><child link="link3"/>
    <limit effort="1" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>
  <link name="link3">
    <visual><origin xyz="0.5 0 0"/><geometry><box size="1.0 0.1 0.05"/></geometry></visual>
